extends ../layouts/index

block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raíces
        h2.text-center.text-2xl.font-extrabold= pagina

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow.rounded-md
                form.space-y-5
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email de registro
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="email" name="email")
                    
                    .flex.items-center.justify-between
                        a(class="text-gray-500 text-xs hover:text-gray-900 hover:underline" href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión
                        a(class="text-gray-500 text-xs hover:text-gray-900 hover:underline" href="/auth/registro") ¿No tienes tienes cuenta? Crea una

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Recuperar contraseña")